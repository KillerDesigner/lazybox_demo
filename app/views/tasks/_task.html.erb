<tr id=<%= "task_#{task.id}" %>>
  <td><%= truncate task.name %></td>
  <td><%= truncate task.description %></td>
  <td>
    <%= link_to 'Show', task, :id => 'new_task_link' %>
    <%= link_to 'Edit', edit_task_path(task), :remote => true %>
    <%= link_to 'Destroy', task, :confirm => 'Are you sure you want to delete this entry? This is an irreversible action.', :method => :delete, :remote => true %>
  </td>
</tr>
