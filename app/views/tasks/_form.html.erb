<%= form_for @task, remote: true do |f| %>
  <fieldset>
    <legend>Task</legend>
    <%= f.text_field :name, placeholder: 'Name' %>
    <%= error_tag @task.errors[:name] %>
    <%= f.text_area :description, placeholder: 'Description', rows: 5 %>
    <%= error_tag @task.errors[:description] %>
    <br />
    <%= f.submit %>
  </fieldset>
<% end %>
